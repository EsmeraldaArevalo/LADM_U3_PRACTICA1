<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Inicio">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="COBRANZA"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/coppel"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/descarga"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="MEJORA TU VIDA"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/buenfin"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/buenfin"/>

    <Button
        android:id="@+id/conductores"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="conductores" />

    <Button
        android:id="@+id/vehiculos"
        android:layout_width="170dp"
        android:layout_marginTop="-48dp"
        android:layout_marginLeft="205dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="VEHICULOS" />





</LinearLayout>